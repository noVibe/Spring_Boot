<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="2" author="BV">
        <preConditions>
            <tableExists tableName="city"/>
            <tableExists tableName="position"/>
            <not>
                <tableExists tableName="employee"/>
            </not>
        </preConditions>
        <createTable tableName="employee">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="first_name" type="VARCHAR(60)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(60)">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="city_id" type="INTEGER">
                <constraints foreignKeyName="fk_employee_city" references="city(id)"/>
            </column>
            <column name="position_id" type="BIGINT">
                <constraints foreignKeyName="fk_employee_position" references="position(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>